<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaUI.Views.fFolder"
        Title="fFolder"
        Width="450"
        Height="250"
        Background="White">
	<Grid Margin="10">
		<!-- Header -->
		<DockPanel LastChildFill="False" Margin="0,0,0,10">
			<TextBlock Text="Folder"
					   DockPanel.Dock="Top"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   FontSize="16"
					   FontWeight="Bold"
					   Cursor="SizeAll"/>
		</DockPanel>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
			<!-- Folder Name -->
			<StackPanel Margin="0,10">
				<TextBlock Text="Tên nhóm"/>
				<TextBox Name="txtName"
						 Background="#F9FAFB"
						 BorderBrush="Gray"
						 BorderThickness="1"/>
			</StackPanel>

			<!-- Date Create -->
			<StackPanel Margin="0,10">
				<TextBlock Text="Ngày tạo"/>
				<TextBox Name="txtDateCreate"
						 Background="#F9FAFB"
						 BorderBrush="Gray"
						 BorderThickness="1"
						 IsReadOnly="True"/>
			</StackPanel>

			<!-- Buttons -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
				<Button Name="btnExit"
						Content="Đóng"
						Width="100" Margin="5"
						Background="Red" Foreground="White"
						Click="BtnExit_Click"/>
				<Button Name="btnAdd"
						Content="Thêm"
						Width="100" Margin="5"
						Background="Green" Foreground="White"
						Click="BtnAdd_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
