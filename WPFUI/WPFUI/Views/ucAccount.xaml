<UserControl x:Class="WPFUI.ucAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WPFUI"
             mc:Ignorable="d"
             Background="#F3F4F6"
             Padding="20"
              Height="Auto">

    <UserControl.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="CustomBg" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkText" Color="#1F2937"/>
        <SolidColorBrush x:Key="LightText" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="GreenAccent" Color="#10B981"/>
        <SolidColorBrush x:Key="RedAccent" Color="#EF4444"/>
        <SolidColorBrush x:Key="GrayText" Color="#374151"/>
        <SolidColorBrush x:Key="LightGrayText" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="DodgerBlue" Color="#1E90FF" />
        <local:WarnStateConverter x:Key="WarnStateConverter"/>
        <!-- Height Converter -->
        <local:HeightConverter x:Key="HeightConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <ItemsPanelTemplate x:Key="HorizontalItemsPanel">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- StatCardStyle -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- CustomComboBoxStyle -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4" 
                                    BorderBrush="LightGray" BorderThickness="1" Padding="2">
                                <ContentPresenter Name="ContentSite"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="6,0,24,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  IsHitTestVisible="False"/>
                            </Border>
                            <ToggleButton Name="DropDownToggle"
                                          Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          HorizontalAlignment="Right"
                                          Width="20" Height="20"
                                          Margin="0,0,4,0"
                                          VerticalAlignment="Center">
                                <Path x:Name="Arrow"
                                      Fill="Black"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                            </ToggleButton>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide"
                                   StaysOpen="False">
                                <Border Name="DropDownBorder"
                                        SnapsToDevicePixels="True"
                                        Background="White"
                                        BorderThickness="1"
                                        BorderBrush="LightGray"
                                        CornerRadius="4"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True" Background="White">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#EEE"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180" CenterX="4" CenterY="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedFlatButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Stats Cards -->
        <UniformGrid DockPanel.Dock="Top" Columns="4" Margin="0,0,0,24" HorizontalAlignment="Stretch">
            <!-- Card 1: Server -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Stretch" Height="90" Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Server" FontSize="12" FontWeight="Medium" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Fill="Green" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox materialDesign:HintAssist.Hint="Traodoisub.com" Width="150" Height="22" FontWeight="SemiBold">
                                <ComboBoxItem Content="Traodoisub.com"/>
                                <ComboBoxItem Content="Tuongtaccheo.net"/>
                                <ComboBoxItem Content="Auto.golike.net"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="12,0,0,0" VerticalAlignment="Center" Width="30" Height="40">
                        <Image Source="pack://application:,,,/Resources/iconServer.PNG" Stretch="Uniform" Width="32"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Card 2: Account Group -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Stretch" Height="90" Margin="10,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Nhóm tài khoản" FontSize="12" FontWeight="Medium" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                            <ComboBox materialDesign:HintAssist.Hint="Tất cả các nhóm" Width="150" Height="22" Name="cbb_Folder"  FontWeight="SemiBold">
                                <ComboBoxItem Content="Tất cả các nhóm"/>
                                <ComboBoxItem Content="Nhóm Thường"/>
                                <ComboBoxItem Content="Nhóm VIP"/>
                            </ComboBox>
                            <Button IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignIconButton}" ToolTip="MaterialDesignIconButton" Height="32" Width="25" Click="btnAddFolder_Click">
                                <materialDesign:PackIcon Kind="AddBold" Foreground="DodgerBlue" HorizontalAlignment="Center" Height="16"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="12,0,0,0" VerticalAlignment="Center" Width="30" Height="40">
                        <Image Source="pack://application:,,,/Resources/iconGroup.PNG" Stretch="Uniform" Width="32"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Card 3: CPU and RAM -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Stretch" Height="90" Padding="0,1,1,0" Margin="10,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Background="Transparent" VerticalAlignment="Center" Margin="10,0,106,0">
                        <!-- CPU -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="CPU" FontSize="10" Foreground="Gray" Margin="0,0,0,4" />
                            <ProgressBar x:Name="CpuProgressBar"  Height="6" Maximum="100" Value="45" Background="#E5E7EB" Foreground="#2563EB" BorderThickness="0" />
                            <TextBlock x:Name="CpuText" Text="45%" FontSize="9" Foreground="Gray" HorizontalAlignment="Right" Margin="0,4,0,0" />
                        </StackPanel>
                        <!-- RAM -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="RAM" FontSize="10" Foreground="Gray" Margin="0,0,0,4" />
                            <ProgressBar x:Name="RamProgressBar" Height="6" Maximum="100" Value="65" Background="#E5E7EB" Foreground="#16A34A" BorderThickness="0" />
                            <TextBlock x:Name="RamText" Text="4.2/6.2 GB" FontSize="9" Foreground="Gray" HorizontalAlignment="Right" Margin="0,4,0,0" />
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="12,0,12,0" VerticalAlignment="Center" Width="30" Height="40">
                        <Image Source="pack://application:,,,/Resources/iconCpu.PNG" Stretch="Uniform" Width="32"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Card 4: Jobs Running -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Stretch" Height="90" Margin="10,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="10,0,10,6">
                        <TextBlock Text="Jobs đang chạy" FontSize="12" FontWeight="Medium" Foreground="Gray" Padding="0" Height="14" Margin="0,0,0,2"/>
                        <Grid Margin="0,-2,0,0" Height="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListView Background="Transparent" BorderThickness="0" FontSize="8"
                                      ItemsPanel="{StaticResource HorizontalItemsPanel}" Height="26" Width="342">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Margin" Value="4,0"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="Foreground" Value="#3B82F6"/>
                                        <Setter Property="Background" Value="#EFF6FF"/>
                                        <Setter Property="FontSize" Value="9"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListViewItem Content="Like"/>
                                <ListViewItem Content="Bình luận"/>
                                <ListViewItem Content="Theo dõi"/>
                            </ListView>
                            <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Cài đặt job cần chạy" Margin="10,5,10,0" FontSize="8" VerticalAlignment="Top" Height="31" Width="31">
                                <materialDesign:PackIcon Kind="Settings" HorizontalAlignment="Center" Height="20" Foreground="DodgerBlue"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="12,0,12,0" VerticalAlignment="Center" Width="30" Height="40">
                        <Image Source="pack://application:,,,/Resources/iconLisst.PNG" Stretch="Uniform" Width="32"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Control Panel -->
        <Border DockPanel.Dock="Top" Background="{StaticResource CardBg}" BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1" CornerRadius="12" Margin="0,0,0,24" Padding="16" HorizontalAlignment="Stretch" Height="82">
            <Grid Margin="0,0,0,-7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Điều khiển" FontSize="13" Foreground="#111827" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Luồng:" FontSize="12" Foreground="{StaticResource GrayText}" VerticalAlignment="Center"/>
                        <materialDesign:NumericUpDown Value="5" Width="30" HorizontalAlignment="Center" BorderThickness="0" Maximum="100" Minimum="1"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                     PreviewTextInput="NumericUpDown_PreviewTextInput" PreviewKeyDown="NumericUpDown_PreviewKeyDown"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                    <Button Background="{StaticResource GreenAccent}" Foreground="White" Style="{StaticResource RoundedFlatButton}"
                            Height="35" Width="90" Padding="8,4" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
                            <materialDesign:PackIcon Kind="Play" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Chạy" VerticalAlignment="Center" FontSize="13.5" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Background="{StaticResource RedAccent}" Foreground="White" Style="{StaticResource RoundedFlatButton}"
                            Height="35" Width="90" Padding="8,4" ToolTip="Dừng" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
                            <materialDesign:PackIcon Kind="Stop" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Dừng" VerticalAlignment="Center" FontSize="13.5" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Background="{StaticResource DodgerBlue}" x:Name="btnLoadAccount" Foreground="White" Style="{StaticResource RoundedFlatButton}"
                            Height="35" Width="110" Padding="8,Auto" ToolTip="Làm mới" Click="ButtonReload_Click"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
                            <materialDesign:PackIcon Kind="Reload" Width="24" Height="24" Margin="0,0,8,0"  />
                            <TextBlock Text="Làm mới" VerticalAlignment="Center" FontSize="13.5" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Account Table -->
        <Border DockPanel.Dock="Top" Background="{StaticResource CardBg}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header and Search -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Danh sách tài khoản" FontSize="16" FontWeight="SemiBold" Foreground="#111827" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                                <Ellipse Width="8" Height="8" Fill="#0000FF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="Tổng:" x:Name="lbAccountTotal" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbAccoutTotale" Text="{Binding TotalAccounts}" Foreground="#0000FF" FontWeight="SemiBold" Margin="4,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                                <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="LIVE:" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbAccountLive" Foreground="#22C55E" Text="{Binding LiveAccounts}" FontWeight="SemiBold" Margin="4,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                                <Ellipse Width="8" Height="8" Fill="#EF4444" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="DIE:" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbAccountDie" Foreground="#EF4444" Text="{Binding DieAccounts}" FontWeight="SemiBold" Margin="4,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="8" Height="8" Fill="#EAB308" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="Trường hợp khác:" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbAccountWarn" Text="{Binding WarnAccounts}" Foreground="#EAB308" FontWeight="SemiBold" Margin="4,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <materialDesign:ColorZone Margin="16,0,0,0" Padding="8,4,8,0" Width="Auto" Height="35" Panel.ZIndex="8"
                                            materialDesign:ElevationAssist.Elevation="Dp2" CornerRadius="2" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MaterialDesignToolButton}">
                                    <materialDesign:PackIcon Kind="Search" Width="Auto" Height="Auto" Opacity=".56"/>
                                </Button>
                                <TextBox Grid.Column="1" MinWidth="200" Margin="8,0,0,0" VerticalAlignment="Center"
                                 materialDesign:HintAssist.Hint="Tìm kiếm tài khoản..." materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </materialDesign:ColorZone>
                        <Button Background="{StaticResource DodgerBlue}" Click="btnAddAccount_Click" Foreground="White" Style="{StaticResource RoundedFlatButton}"
                                Height="35" Width="160" Padding="8,4" Margin="16,0,0,0"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
                                <materialDesign:PackIcon Kind="Add" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Thêm tài khoản" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- ListView -->
                <ListView Grid.Row="1" x:Name="DataGridAccount" ItemsSource="{Binding Accounts}" Margin="5"
          ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
          Background="{Binding BackgroundColor}" BorderThickness="0" SelectionMode="Extended"
          VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling"
          ScrollViewer.ScrollChanged="DataGridAccount_ScrollChanged">
                    <ListView.Resources>
                        <!-- Style for GridViewColumnHeader -->
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0,0,0"/>
                            <Setter Property="Background" Value="{StaticResource CardBg}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0.5"/>
                            <Setter Property="Foreground" Value="{Binding DataContext.FontColor, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewColumnHeader">
                                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <!-- Simplified Style for ListViewItem -->
                        <Style TargetType="ListViewItem">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="50">
                                <GridViewColumn.Header>
                                    <TextBlock Text="Chọn" TextAlignment="Left" Padding="5,0,0,0"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State}" Value="LIVE">
                                                            <Setter Property="Foreground" Value="{StaticResource GreenAccent}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="DIE">
                                                            <Setter Property="Foreground" Value="{StaticResource RedAccent}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State, Converter={StaticResource WarnStateConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="#EAB308"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100">
                                <GridViewColumn.Header>
                                    <TextBlock Text="Uid" TextAlignment="Left" Padding="5,0,0,0"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding AccountName}" TextAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State}" Value="LIVE">
                                                            <Setter Property="Foreground" Value="{StaticResource GreenAccent}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="DIE">
                                                            <Setter Property="Foreground" Value="{StaticResource RedAccent}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State, Converter={StaticResource WarnStateConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="#EAB308"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100">
                                <GridViewColumn.Header>
                                    <TextBlock Text="Tên" TextAlignment="Left" Padding="5,0,0,0"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" TextAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock.Style>
